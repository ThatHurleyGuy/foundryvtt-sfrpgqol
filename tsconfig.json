{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "es2019"
    ],
    "allowJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "sourceMap": true,
    "strict": true,
    "target": "es2019",
    "types": ["foundry-pc-types"]
  }
}
